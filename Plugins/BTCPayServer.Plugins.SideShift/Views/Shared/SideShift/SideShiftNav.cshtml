@using BTCPayServer.Abstractions.Extensions
@using BTCPayServer.Plugins.SideShift
@using Microsoft.AspNetCore.Routing
@{
    var storeId = Context.GetRouteValue("storeId")?.ToString();
    var isActive = !string.IsNullOrEmpty(storeId) && ViewContext.RouteData.Values.TryGetValue("Controller", out var controller) &&  controller is not null && 
        nameof(SideShiftController).StartsWith(controller?.ToString(), StringComparison.InvariantCultureIgnoreCase);
}
@if (!string.IsNullOrEmpty(storeId))
{
    <li class="nav-item">
        <a asp-area="" asp-controller="SideShift" asp-action="UpdateSideShiftSettings" asp-route-storeId="@storeId" class="nav-link js-scroll-trigger @(isActive? "active": string.Empty)">
            <svg role="img" class="icon">
            </svg>
            <span>Sideshift</span>
        </a>
    </li>
}
